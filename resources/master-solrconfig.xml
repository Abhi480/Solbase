<?xml version="1.0" encoding="UTF-8" ?>

<config>
  <requestDispatcher handleSelect="true"/>
  
  <requestHandler name="photobucket" class="com.pb.handler.PhotobucketSearchHandler" default="true">
    <lst name="defaults">
        <int name="rows">20</int>
        <str name="q.op">AND</str>
        <str name="shards">10.254.254.31:8080/solr/images,10.254.254.32:8080/solr/images,10.254.254.33:8080/solr/images,10.254.254.34:8080/solr/images</str>
    </lst>
  </requestHandler>

  <requestHandler name="standard" class="solr.StandardRequestHandler">
    <lst name="defaults">
        <int name="rows">20</int>
        <str name="q.op">AND</str>
        <str name="shards">10.254.254.31:8080/solr/images,10.254.254.32:8080/solr/images,10.254.254.33:8080/solr/images,10.254.254.34:8080/solr/images</str>
    </lst>
  </requestHandler>
  <requestHandler name="/admin/" class="org.apache.solr.handler.admin.AdminHandlers" />
      
  <queryResponseWriter name="pbxml" class="com.pb.response.PBXMLResponseWriter" default="true"/>
  <queryResponseWriter name="xml" class="org.apache.solr.request.XMLResponseWriter"/>
  <queryResponseWriter name="binary" class="org.apache.solr.request.BinaryResponseWriter"/>
  <!-- config for the admin interface --> 
  <admin>
    <defaultQuery>solr</defaultQuery>
  </admin>
  
</config>

